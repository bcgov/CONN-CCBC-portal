{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "types": ["@testing-library/jest-dom"],
    "paths": {
      "*": ["*", "../*", "__generated__/*"]
    }
  },
  "exclude": [
    ".next",
    "node_modules",
    "public",
    "cypress",
    "./cypress.config.ts",
    "./node_modules/**/*",
    "tests/**/*"
  ],
  "include": ["./**/*", "./.eslintrc.js"]
}
