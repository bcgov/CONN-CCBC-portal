{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "sourceMap": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "*": ["*", "../*", "__generated__/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    ".next",
    "node_modules",
    "public",
    "cypress",
    "./cypress.config.ts",
    "./node_modules/**/*"
  ],
  "include": ["./**/*", "./.eslintrc.js", ".next/types/**/*.ts", "./types/**/*"]
}
