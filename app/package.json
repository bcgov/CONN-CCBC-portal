{
  "name": "conn-ccbc-portal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' ts-node --project tsconfig.server.json server.ts",
    "build": "yarn run build:server && yarn run build:schema && yarn run build:relay && yarn run build:next",
    "build:next": "next build",
    "build:relay": "mkdir -p __generated__ && relay-compiler",
    "build:server": "tsc --project tsconfig.server.json",
    "build:schema": "postgraphile -X -c postgres://localhost/ccbc -s ccbc_public --export-schema-graphql schema/schema.graphql --classic-ids",
    "start": "node --unhandled-rejections=strict dist/server.js",
    "lint": "next lint",
    "relay": "mkdir -p __generated__ && relay-compiler",
    "pretest": "yarn run build:relay",
    "test": "jest",
    "test:e2e": "wait-on http://localhost:3000 && HAPPO_DOWNLOAD_ALL=true happo-e2e -- cypress run",
    "cypress": "cypress open"
  },
  "dependencies": {
    "@bcgov-cas/sso-express": "^3.1.0",
    "@bcgov-cas/sso-react": "^2.0.0",
    "@button-inc/bcgov-theme": "^1.0.1",
    "@button-inc/form-schema": "^1.0.0-alpha.8",
    "@growthbook/growthbook-react": "^0.9.0",
    "@rjsf/core": "^4.2.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "aws-sdk": "^2.1170.0",
    "babel-plugin-styled-components": "^2.0.7",
    "body-parser": "^1.20.0",
    "connect-pg-simple": "^7.0.0",
    "convict": "^6.2.2",
    "cookie-parser": "^1.4.6",
    "delay": "^5.0.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-session": "^1.17.2",
    "graphql-upload": "^15.0.2",
    "lightship": "6.7.2",
    "luxon": "^3.0.1",
    "next": "^12.1.6",
    "next-session": "^3.4.0",
    "openid-client": "^5.1.6",
    "postgraphile": "^4.12.9",
    "react": "^18.0.0",
    "react-currency-input-field": "^3.6.4",
    "react-datepicker": "^4.7.0",
    "react-dom": "^18.0.0",
    "react-relay": "^13.2.0",
    "react-relay-network-modern": "^6.2.1",
    "relay-nextjs": "^0.8.0",
    "relay-runtime": "^13.2.0",
    "relay-test-utils": "^13.2.0",
    "sbc-common-components": "2.4.54",
    "styled-components": "^5.3.5",
    "ts-node": "^10.7.0"
  },
  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "^3.0.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@types/convict": "^6.1.1",
    "@types/jest": "^28.1.6",
    "@types/luxon": "^3.0.0",
    "@types/node": "17.0.23",
    "@types/react": "18.0.1",
    "@types/react-datepicker": "^4.4.1",
    "@types/react-dom": "18.0.0",
    "@types/react-relay": "^13.0.2",
    "@types/relay-test-utils": "^6.0.5",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-relay": "^13.2.0",
    "cypress": "^9.6.1",
    "eslint": "8.13.0",
    "eslint-config-next": "12.1.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-react-hooks": "^4.5.0",
    "graphql": "^15.6.1",
    "happo-cypress": "^3.0.1",
    "happo-e2e": "^1.1.0",
    "happo.io": "^7.2.1",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "jest-extended": "^3.0.2",
    "prettier": "^2.6.2",
    "relay-compiler": "^13.2.0",
    "ts-jest": "^28.0.2",
    "typescript": "4.6.3",
    "wait-on": "^6.0.1"
  },
  "relay": {
    "src": "./",
    "schema": "./schema/schema.graphql",
    "language": "typescript",
    "artifactDirectory": "./__generated__",
    "exclude": [
      "**/.next/**",
      "**/node_modules/**",
      "**/__generated__/**",
      "**/server/**"
    ]
  },
  "graphql": {
    "schema": "./schema/schema.graphql"
  }
}
