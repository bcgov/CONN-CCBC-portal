{
  "name": "conn-ccbc-portal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' ts-node --project tsconfig.server.json server.ts",
    "build": "yarn run build:server && yarn run build:schema && yarn run build:relay && yarn run build:next",
    "build:next": "next build",
    "build:relay": "relay-compiler",
    "build:server": "tsc --project tsconfig.server.json",
    "build:schema": "postgraphile -X -c postgres://localhost/ccbc -s ccbc_public --export-schema-graphql schema/schema.graphql --classic-ids",
    "start": "node --unhandled-rejections=strict dist/server.js",
    "lint": "next lint",
    "relay": "relay-compiler"
  },
  "dependencies": {
    "@button-inc/bcgov-theme": "^1.0.1",
    "@button-inc/form-schema": "^1.0.0-alpha.8",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "body-parser": "^1.20.0",
    "connect-pg-simple": "^7.0.0",
    "convict": "^6.2.2",
    "delay": "^5.0.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "lightship": "6.7.2",
    "express-session": "^1.17.2",
    "next": "12.1.6",
    "next-session": "^3.4.0",
    "postgraphile": "^4.12.9",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-relay": "^13.2.0",
    "styled-components": "^5.3.5",
    "ts-node": "^10.7.0"
  },
  "devDependencies": {
    "@types/convict": "^6.1.1",
    "@types/node": "17.0.23",
    "@types/react": "18.0.1",
    "@types/react-dom": "18.0.0",
    "@types/react-relay": "^13.0.2",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-relay": "^13.2.0",
    "eslint": "8.13.0",
    "eslint-config-next": "12.1.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "graphql": "^16.3.0",
    "prettier": "^2.6.2",
    "relay-compiler": "^13.2.0",
    "typescript": "4.6.3"
  },
  "relay": {
    "src": "./",
    "schema": "./schema/schema.graphql",
    "language": "typescript"
  },
  "graphql": {
    "schema": "./schema/schema.graphql"
  }
}
